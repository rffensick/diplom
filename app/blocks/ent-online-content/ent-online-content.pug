section.main-content
	.main-content__wrapper
		.main-content__box
			.main-content__one-subject

				h1.main-content__one-subject-title Онлайн тестирование ЕНТ КТА 2017-2018 по одному предмету

				.main-content__one-subject-content
					form(action="#").for-one-subject
						.wrapper-test
							select.one-input-object
								option История Казахстана
								option Физика
								option История мира
								option Математика
								option География
								option Биология
								option Химия
