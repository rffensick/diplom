				.main-content__complex-subject-content
					form(action="#").for-complex-subject
						.wrapper-test
							select.complex-input-object
								option Биология
								option История мира
								option География
								option Физика
								option Химия
								option Английский язык
								option Немецкий язык
								option Литература
		
							select.complex-input-language
								option Русский
								option Казахский

							.time-limit
								label(for="time-limit2")
									input(type="checkbox" id="time-limit2" )
									span Пройти тест на время (с таймером на 30 минут)
							
							input(type="submit" value="Начать тест" ).main-content__info-button 
		
