								option Английский язык
								option Немецкий язык
								option Казахский язык
								option Литература

							select.one-input-language
								option Русский
								option Казахский

							.time-limit
								label(for="time-limit")
									input(type="checkbox" id="time-limit" )
									span Пройти тест на время (с таймером на 30 минут)

							input(type="submit" value="Начать тест" ).main-content__info-button 

